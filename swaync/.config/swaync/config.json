{
  "$schema": "/etc/xdg/swaync/configSchema.json",

  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",

  "control-center-width": 420,
  "control-center-height": 560,

  "notification-window-width": 380,

  "timeout": 6,
  "timeout-low": 4,
  "timeout-critical": 0,

  "fit-to-screen": true,
  "relative-timestamps": true,
  "notification-grouping": true,

  "image-visibility": "when-available",

  "keyboard-shortcuts": true,
  "hide-on-action": true,
  "hide-on-clear": false,

  "text-empty": "No notifications ğŸ‰",

  "widgets": [
    "title",
    "dnd",
    "mpris",
    "buttons-grid",
    "notifications"
  ],

  "widget-config": {

    "title": {
      "text": "Notifications",
      "clear-all-button": true
    },

    "dnd": {
      "text": "Do Not Disturb"
    },

    "notifications": {
      "vexpand": true
    },

    "mpris": {
      "autohide": true
    },

    "buttons-grid": {
      "buttons-per-row": 5,
      "actions": [
        {
          "label": "ó°–©",
          "type": "toggle",
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": "ó°‚¯",
          "type": "toggle",
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
          "update-command": "sh -c 'bluetoothctl show | grep -q \"Powered: yes\" && echo true || echo false'"
        },
        {
          "label": "ğŸŒ™",
          "type": "toggle",

          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && hyprsunset -t 4500 & disown || pkill hyprsunset'",

          "update-command": "pgrep hyprsunset >/dev/null && echo true || echo false"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "pamixer -t"
        },
        {
          "label": "ğŸ¨",
          "type": "button",
          "command": "hyprpicker -a"
        },
        {
          "label": "ğŸ“¸",
          "type": "button",
          "command": "grimblast copy area"
        },
        {
          "label": "ğŸ–¥",
          "type": "button",
          "command": "grimblast copy screen"
        },
        {
          "label": "ğŸ”’",
          "type": "button",
          "command": "hyprlock"
        },
        {
          "label": "â»",
          "type": "button",
          "command": "wlogout"
        }
      ]
    }

  }

}